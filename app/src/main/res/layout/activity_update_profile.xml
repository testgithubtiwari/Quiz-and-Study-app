<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity"
    android:background="#17B88B">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="9sp"
        app:cardCornerRadius="12sp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="20dp"
        android:background="@color/Accent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/Accent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_update_profile_head"
            android:text="You can update Your Details Now!"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_update_profile_head"
            android:id="@+id/textview_update_name"
            android:text="Name"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/edittext_upadate_full_name"
            android:layout_below="@+id/textview_update_name"
            android:layout_marginTop="5dp"
            android:hint="Enter your new name"
            android:textSize="20sp"
            android:padding="5dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_upadate_full_name"
            android:id="@+id/textview_update_dob"
            android:text="Date of Birth(dd/mm/yy)"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/edittext_upadate_dob"
            android:layout_below="@+id/textview_update_dob"
            android:layout_marginTop="5dp"
            android:hint="Enter your new Dob"
            android:textSize="20sp"
            android:padding="5dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_upadate_dob"
            android:id="@+id/textview_update_mobile"
            android:text="Conatct"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/edittext_upadate_mobile"
            android:layout_below="@+id/textview_update_mobile"
            android:layout_marginTop="5dp"
            android:hint="New contact number without(+91)"
            android:textSize="17sp"
            android:padding="2dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_upadate_mobile"
            android:id="@+id/textview_update_gender"
            android:text="Gender"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>



        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_group_update_gender"
            android:layout_below="@+id/textview_update_gender"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="5dp">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_female"
                android:text="Female"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="17sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_male"
                android:text="Male"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="17sp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp" />

        </RadioGroup>

         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/button_update_profile_pic"
             android:layout_below="@+id/radio_group_update_gender"
             android:text="Update Profile Pic"
             android:layout_marginLeft="40dp"
             android:layout_marginRight="40dp"
             android:textAppearance="@style/TextAppearance.AppCompat.Headline"
             android:background="@drawable/border"
             android:layout_marginTop="20dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_update_profile"
            android:layout_below="@+id/button_update_profile_pic"
            android:text="Save Profile"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:background="@drawable/border"
            android:layout_marginTop="20dp"/>



        <ProgressBar
            android:id="@+id/progress_bar_update_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_upadate_mobile"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>