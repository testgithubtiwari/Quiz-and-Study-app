<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmailActivity"
    android:background="#D3D3D3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/RL_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border"
            android:padding="15dp">


            <TextView
                android:id="@+id/textview_update_email_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="You can Update your Email Now!"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


            <TextView
                android:id="@+id/textview_update_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_update_email_head"
                android:layout_marginTop="20dp"
                android:padding="6dp"
                android:text="Current Email"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textview_update_email_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_update_email"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:padding="6dp"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/textview_update_email_verify_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_update_email_old"
                android:layout_marginTop="15dp"
                android:padding="6dp"
                android:text="Password*"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edittext_update_verify_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_update_email_verify_password"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:hint="Enter your password to verify"
                android:padding="5dp" />


            <Button
                android:id="@+id/button_update_email_authneticate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittext_update_verify_pwd"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/border"
                android:text="authenticate" />


            <ProgressBar
                android:id="@+id/progressbar_update_RL1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittext_update_verify_pwd"
                android:layout_centerInParent="true"
                android:visibility="gone" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:background="@drawable/border"
            android:layout_below="@+id/RL_email"
            android:id="@+id/RL2_email">




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_update_email_authenticate"
                android:layout_marginTop="10dp"
                android:text="You are not verified till ! Please authenticate yourself !"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:background="@drawable/border"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_update_newemail"
                android:layout_below="@+id/textview_update_email_authenticate"
                android:text="New Email*"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="6dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_below="@+id/textview_update_newemail"
                android:hint="Enter your new email"
                android:padding="5dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:id="@+id/edittext_update_email_new"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittext_update_email_new"
                android:text="Update Email"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:id="@+id/button_update_email"/>


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_update_email_authenticate"
                android:layout_centerInParent="true"
                android:id="@+id/progressbar_update_RL2"
                android:visibility="gone"/>



        </RelativeLayout>


    </RelativeLayout>




</ScrollView>