<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@drawable/login_background"
    android:id="@+id/drawer_layput"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/rl1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12sp"
            app:cardElevation="8sp"
            app:cardBackgroundColor="#A158CF">

        <LinearLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24sp"
                app:cardElevation="3sp"
                android:layout_marginLeft="3dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hi! Ritik"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_settings"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"/>

        </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can choose your Subject  from the below options"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginTop="70dp"
            android:id="@+id/textview_homepage_head"
            android:gravity="center_horizontal" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:id="@+id/cardview1"
            app:cardBackgroundColor="@color/PrimaryDark"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_below="@+id/textview_homepage_head"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onNavigateClicked">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageview_physics"
                android:layout_height="200dp"
                android:padding="10dp"
                android:src="@drawable/physics1"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:id="@+id/cardview2"
            app:cardBackgroundColor="@color/PrimaryDark"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_below="@+id/cardview1"
            android:layout_marginTop="10dp">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageview_chemistry"
                android:layout_height="200dp"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/chemistry2"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:id="@+id/cardview3"
            app:cardBackgroundColor="@color/PrimaryDark"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_below="@+id/cardview2"
            android:layout_marginTop="10dp">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageview_maths"
                android:layout_height="200dp"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/maths1"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:id="@+id/cardview4"
            app:cardBackgroundColor="@color/PrimaryDark"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_below="@+id/cardview3"
            android:layout_marginTop="10dp">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageview_biology"
                android:layout_height="200dp"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/biology"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>


